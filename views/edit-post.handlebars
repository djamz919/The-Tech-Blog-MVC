<article class="post">
  <div class="cardHeader">
    <h3>
      Edit Post
    </h3>
  </div>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-url">Content</label>
      <input id="post-url" name="post-url" value="{{post.post_url}}" />
    </div>
    <div>
      <button type="submit" class="update-post-btn">Update post</button>
    </div>
    <div>
      <button type="button" class="delete-post-btn">Delete</button>
    </div>
  </form>
</article>
